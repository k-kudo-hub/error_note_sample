<% content_for(:html_title) { "ログイン" } %>
<% content_for(:html_description) { "アカウントをお持ちの方は、こちらからログインの上、ErrorNoteをご利用ください。" } %>
<%= render "shared/header" %>
<div class="app-body">
  <section class="app-body-inner">
    <h1 class="page-title">ログイン</h1>
    <div class="inner-bottom-btn-wrap">
      <%= link_to user_twitter_omniauth_authorize_path, method: :post, class: "btn-twitter" do %>
        <i class="fab fa-twitter"></i> Twitterアカウントでログイン
      <% end %>
    </div>
    <hr class="mx-auto" size="1px" width="75%" color="#b3b3b3" noshade>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="user-input-field">
        <%= f.label "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user-input" %>
      </div>
      <div class="user-input-field">
        <%= f.label "パスワード" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "user-input" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="user-check-field">
          <%= f.check_box :remember_me %>
          <%= f.label "パスワードを記憶する" %>
        </div>
      <% end %>
      <div class="inner-bottom-btn-wrap">
        <%= f.button class: "btn-default" do %>
          <i class="fa fa-sign-in-alt fa-lg"></i> ログイン
        <% end %>
      </div>
    <% end %>
    <div class="devise-links">
      <%= render "devise/shared/links" %>
    </div>
  </section>
</div>
<%= render "shared/footer" %>
